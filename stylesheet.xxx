html body {
	background: black;
	opacity: 0.8;
}

nav {
    position: absolute;
    right: 1em;
    display: inline-block;
}

nav div {
    border-radius: 5px;
    display: inline-block;
    background: lightgray;
    border: 1px solid purple;
    transition: 1500ms;
}

nav div:hover {
    background: white;
    border: 1px solid lightpink;
    transition: 1500ms;
}

nav li {
    display: inline-block;
    padding: 10px 35px 10px 35px;
}

a {
    color: purple;
    cursor: pointer;
    text-decoration:none;
    font-size: 30px;
}

a:hover {
    color: darkviolet;
    
}

nav li a {
    color: indigo;
    transition: 1000ms;
    font-size: 30px;
  
}

nav li a:hover {
    color: pink;
    transition: 1000ms;
}

h1 {
    margin-left: 25px;
    color:purple;
}

h1 a{
    margin-left: 50px;
    font-size: 40px;
}

h1 a:hover {
    text-decoration:underline;
}

div.list li {
    color:purple;
}

div.list li a {
	text-decoration: none;
	color: purple;
}

div.list li a:hover {
    color: darkviolet;
}



